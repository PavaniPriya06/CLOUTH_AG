# TCS E-Commerce Platform - Environment Configuration Template

# ========== SERVER CONFIGURATION ==========
PORT=5000
NODE_ENV=development

# ========== DATABASE CONFIGURATION ==========
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/tcs-ecommerce

# OR MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tcs-ecommerce?retryWrites=true&w=majority

# ========== JWT CONFIGURATION ==========
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRE=7d

# ========== ADMIN CONFIGURATION ==========
ADMIN_EMAIL=admin@tcs.com
ADMIN_PASSWORD=Admin@123
# Change these in production!

# ========== FILE UPLOAD CONFIGURATION ==========
UPLOADS_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif

# ========== PAYMENT GATEWAY (Razorpay) ==========
# Get keys from: https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ========== SMS NOTIFICATIONS (Twilio) ==========
# Get credentials from: https://www.twilio.com/
# SMS sent after payment confirmation & order creation
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Admin phone for new order alerts
# Format: +91XXXXXXXXXX (with country code)
ADMIN_PHONE=+919876543210

# ========== EMAIL CONFIGURATION (Optional - For Notifications) ==========
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@tcs-store.com

# ========== CORS CONFIGURATION ==========
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ========== IMAGE URL CONFIGURATION ==========
BASE_URL=http://localhost:5000
IMAGES_URL=http://localhost:5000/uploads/products

# ========== LOG CONFIGURATION ==========
LOG_LEVEL=debug

# ========== STORE CONFIGURATION ==========
STORE_NAME=TCS Fashion Store
STORE_EMAIL=support@tcs.com
STORE_PHONE=+91-9876543210
STORE_ADDRESS=123 Fashion Street, Mumbai, Maharashtra 400001

# ========== FEATURES FLAGS ==========
ENABLE_PAYMENT_GATEWAY=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# ========== CURRENCY CONFIGURATION ==========
CURRENCY=INR
CURRENCY_SYMBOL=â‚¹

# ========== SHIPPING CONFIGURATION ==========
SHIPPING_CHARGE=49
FREE_SHIPPING_ABOVE=500

# ========== AUTHENTICATION ==========
SESSION_SECRET=your_session_secret_key
BCRYPT_ROUNDS=10
