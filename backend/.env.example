# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tcs_store
# OR for Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/tcs_store

# JWT Secret (use a long random string)
JWT_SECRET=your_super_secret_jwt_key_here_change_this

# Server
PORT=5000
CLIENT_URL=http://localhost:5173

# ────────────────────────────────────────────────────────
# RAZORPAY PAYMENT GATEWAY (REQUIRED for payments)
# Get your keys from: https://dashboard.razorpay.com/app/keys
# ────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# Webhook Secret (optional, for server-side verification)
# Get from: Razorpay Dashboard > Webhooks > Create Webhook
RAZORPAY_WEBHOOK_SECRET=

# ────────────────────────────────────────────────────────
# UPI PAYMENT (Fallback if not set in admin panel)
# ────────────────────────────────────────────────────────
# Admin UPI ID where payments should go
# Can also be configured via Admin Dashboard > Settings
ADMIN_UPI_ID=admin@upi

# Facebook OAuth (from developers.facebook.com)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# Google Maps (from console.cloud.google.com)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Admin credentials (for initial setup)
ADMIN_EMAIL=admin@tcs.com
ADMIN_PASSWORD=Admin@123

# ────────────────────────────────────────────────────────
# SMS NOTIFICATIONS (Optional - Twilio)
# ────────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
ADMIN_PHONE=+919999999999
